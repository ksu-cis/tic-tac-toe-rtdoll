@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Tic Tac Toe</h1>
<div id="grid">
    @for (int i = 0; i < 9; i++)
    {
        <div id="square-@i" class="square"></div>
    }
</div>
<div id="turn"></div>

<div id="Link"><a asp-page="/servertictactoe">Go to Server TicTacToe Page</a></div>
<div id="Link"><a asp-page="/Checkers">Play Checkers</a></div>